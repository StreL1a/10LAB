@model Lab_10.Models.ApplicationForm

<h1>Давай знайомитись =)</h1>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #2b2b2b;
        color: #ffffff;
        font-size: 18px;
        padding: 40px;
        text-align: center;
    }

    input[type="text"], input[type="email"], input[type="date"], select {
        background-color: #434343;
        color: #ffffff;
        border: 2px solid #ffffff;
        border-radius: 8px;
        box-sizing: border-box;
        font-size: 16px;
        margin: 20px 0;
        padding: 10px 15px;
        width: 60%;
    }

    input[type="submit"] {
        background-color: #ff6f61;
        color: #ffffff;
        border: none;
        border-radius: 20px;
        cursor: pointer;
        display: inline-block;
        font-size: 20px;
        margin-top: 30px;
        padding: 12px 40px;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    input[type="submit"]:hover {
        background-color: #ff817e;
    }

    label {
        display: block;
        font-weight: bold;
        margin-top: 30px;
        color: #ff6f61;
    }

    select {
        width: 65%;
    }

    /* Additional Style for Hover Effect */
    input[type="text"]:hover, input[type="email"]:hover, input[type="date"]:hover, select:hover, input[type="submit"]:hover {
        border-color: #ff6f61;
    }
</style>


<form method="post">
    <label for="Fullname">Повне імʼя:</label><br />
    <input type="text" id="Fullname" name="Fullname" required /><br />
    <label for="Email">Your Email:</label><br />
    <input type="email" id="Email" name="Email" required /><br />
    <label for="Date">Дата консультації:</label><br />
    <input type="date" id="Date" name="Date" required min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" /><br />
    <label for="Product">Оберіть продукт:</label><br />
    <select id="Product" name="Product">
        <option value="">Продукт</option>
        <option value="Основи">Основи</option>
        <option value="Java">Java</option>
        <option value="Python">Python</option>
        <option value="JavaScript">JavaScript</option>
        <option value="C#">C#</option>
    </select><br />

    <input type="submit" value="Submit" formaction="@Url.Action("Index", "ApplicationForm")" />
</form>


